<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoFragment">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/group"
            android:backgroundTint="@color/dark">

            <RelativeLayout
                android:padding="25dp"
                android:elevation="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgitemscollect"
                android:layout_marginBottom="15dp">

                <TextView
                    android:id="@+id/TitleInfo"
                    android:text="Informacion Covid-19"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@+id/TitleInfo"
                    android:text="Informacion Covid-19"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/logo_trasnparent"
                    android:layout_width="62dp"
                    android:layout_height="62dp"/>
            </RelativeLayout>

            <GridLayout
                android:columnCount="1"
                android:rowCount="3"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:clickable="true"
                    android:id="@+id/card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:background="@drawable/info_card" />

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/use_phone"
                            android:tint="@color/white"
                            android:elevation="10dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"/>

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                            <TextView
                                android:textColor="@color/white"
                                android:text="Información de la App"
                                android:textStyle="bold"
                                android:textSize="19sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        <TextView
                            android:textColor="@color/white"
                            android:text="Calendar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/stats"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:background="@drawable/info_card_1" />

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_baseline_query_stats_24"
                            android:tint="@color/white"
                            android:layout_width="80dp"
                            android:elevation="10dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:textColor="@color/white"
                                android:text="Estadísticas Covid-19"
                                android:textStyle="bold"
                                android:textSize="19sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/white"
                                android:text="Calendar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/noticias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:background="@drawable/info_card" />

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/newvector"
                            android:tint="@color/white"
                            android:elevation="10dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:textColor="@color/white"
                                android:text="Noticias"
                                android:textStyle="bold"
                                android:textSize="19sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/white"
                                android:text="Ultimas noticias sobre el Covid-19"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/medidas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="6dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:background="@drawable/info_card_1" />

                    <LinearLayout
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_baseline_masks_24"
                            android:tint="@color/white"
                            android:elevation="10dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"/>

                        <LinearLayout
                            android:gravity="center"
                            android:padding="16dp"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:textColor="@color/white"
                                android:text="Medidas Preventivas"
                                android:textStyle="bold"
                                android:textSize="19sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:textColor="@color/white"
                                android:text="Calendar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>
</ScrollView>